{
  "name": "enact-monorepo",
  "version": "2.1.30",
  "private": true,
  "description": "Enact 2.0 - Verified, portable protocol for AI-executable tools",
  "workspaces": [
    "packages/keyring",
    "packages/trust",
    "packages/secrets",
    "packages/shared",
    "packages/execution",
    "packages/api",
    "packages/server",
    "packages/mcp-server",
    "packages/cli",
    "packages/enact",
    "packages/enact-darwin-arm64",
    "packages/enact-darwin-x64",
    "packages/enact-linux-arm64",
    "packages/enact-linux-x64",
    "packages/enact-win32-x64",
    "packages/web"
  ],
  "scripts": {
    "build": "bun run build:keyring && bun run build:trust && bun run build:secrets && bun run build:shared && bun run build:execution && bun run build:api && bun run build:server && bun run build:mcp-server && bun run build:cli && bun run build:web",
    "build:binary:local": "bun run build:keyring && bun run build:trust && bun run build:secrets && bun run build:shared && bun run build:execution && bun run build:api && bun run build:cli && node scripts/build-platform-binary.mjs",
    "build:keyring": "cd packages/keyring && bun run build",
    "build:trust": "cd packages/trust && bun run build",
    "build:secrets": "cd packages/secrets && bun run build",
    "build:shared": "cd packages/shared && bun run build",
    "build:execution": "cd packages/execution && bun run build",
    "build:api": "cd packages/api && bun run build",
    "build:server": "cd packages/server && bun run build",
    "build:mcp-server": "cd packages/mcp-server && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "build:web": "cd packages/web && bun run build",
    "test": "bun test packages/",
    "test:watch": "bun test --watch packages/",
    "test:coverage": "bun test --coverage packages/",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "typecheck": "bun run typecheck:trust && bun run typecheck:secrets && bun run typecheck:shared && bun run typecheck:execution && bun run typecheck:api && bun run typecheck:server && bun run typecheck:mcp-server && bun run typecheck:cli && bun run typecheck:web",
    "typecheck:trust": "cd packages/trust && tsc --noEmit",
    "typecheck:secrets": "cd packages/secrets && tsc --noEmit",
    "typecheck:shared": "cd packages/shared && tsc --noEmit",
    "typecheck:execution": "cd packages/execution && tsc --noEmit",
    "typecheck:api": "cd packages/api && tsc --noEmit",
    "typecheck:server": "cd packages/server && tsc --noEmit",
    "typecheck:mcp-server": "cd packages/mcp-server && tsc --noEmit",
    "typecheck:cli": "cd packages/cli && tsc --noEmit",
    "typecheck:web": "cd packages/web && tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/node": "^22.10.1",
    "husky": "^9.1.7",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.11",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "overrides": {
    "@enactprotocol/sigstore-sign": "4.0.2",
    "@enactprotocol/sigstore-core": "3.0.1",
    "@enactprotocol/sigstore-bundle": "4.0.1",
    "@enactprotocol/sigstore-verify": "3.0.1",
    "@enactprotocol/sigstore-tuf": "4.0.1"
  },
  "packageManager": "bun@1.1.0",
  "keywords": ["ai", "tools", "mcp", "sigstore", "dagger", "verification"],
  "author": "Keith Groves",
  "license": "MIT"
}
